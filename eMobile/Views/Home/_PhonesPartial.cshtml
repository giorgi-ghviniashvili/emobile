@model List<PhoneModel>

@{
    Layout = null;
}

@for(var i = 0; i < Model.Count(); i += 3)
{
<div class="row">
    @for (var j = i; j < Math.Min(i + 3, Model.Count()); j++)
    {
        <div class="col-md-4 tile-row">
            <div class="tile">
                <img src="~/images/@Model[j].ImagePath" alt="Avatar" style="width:100%; height: 262px;">
                <div class="tile-container">
                    <h4><a href="@Url.Action("PhoneDetails", "Home")/@Model[j].Id" target="_blank">@Model[j].Name</a></h4>
                    <div>
                        <button type="button" class="btn btn-success w-100">@Model[j].Price ლარი</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
}